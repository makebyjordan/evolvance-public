
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas para el contenido de la web pública (Servicios, FAQ, etc.)
    match /webContent/{section} {
      // Cualquiera puede leer el contenido de la web
      allow read: if true;
      // Solo los usuarios autenticados pueden escribir (desde el dashboard)
      allow write: if request.auth != null;
    }

    // Regla general para el resto de colecciones (clientes, propuestas, etc.)
    // Permite leer y escribir solo si el usuario está autenticado.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
