
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regla para el contenido web: cualquiera puede leer, solo los autenticados pueden escribir.
    match /webContent/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regla para las colecciones del dashboard:
    // Solo los usuarios autenticados pueden crear, leer, actualizar y borrar.
    match /clients/{clientId} {
      allow read, write: if request.auth != null;
    }

    match /collaborators/{collaboratorId} {
      allow read, write: if request.auth != null;
    }

    match /contracts/{contractId} {
      allow read, write: if request.auth != null;
    }

    match /htmls/{htmlId} {
      allow read, write: if request.auth != null;
    }

    match /invoicesIn/{invoiceId} {
      allow read, write: if request.auth != null;
    }

    match /invoicesOut/{invoiceId} {
      allow read, write: if request.auth != null;
    }

    match /presentations/{presentationId} {
      allow read, write: if request.auth != null;
    }

    match /proposals/{proposalId} {
      allow read, write: if request.auth != null;
    }

    match /services/{serviceId} {
      allow read, write: if request.auth != null;
    }

    match /trainingItems/{itemId} {
      allow read, write: if request.auth != null;
    }

    match /trainingSubsections/{subsectionId} {
      allow read, write: if request.auth != null;
    }
  }
}
