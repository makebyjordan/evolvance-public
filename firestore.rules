rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow public read for web content, but only authenticated write
    match /webContent/{section} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // For all other collections, only allow authenticated users to do anything.
    // This covers clients, proposals, services, etc.
    match /{path=**} {
       allow read, write: if request.auth != null;
    }
  }
}
