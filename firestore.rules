rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Regla para la web p√∫blica: cualquiera puede leer, solo los autenticados pueden escribir
    match /webContent/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Regla para las respuestas de LandADS: cualquiera puede crear
    match /landAdResponses/{document} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Reglas generales para colecciones del dashboard
    // Solo los usuarios autenticados pueden leer y escribir.
    match /{collection}/{document} {
      allow read, write: if request.auth != null;
    }
  }
}
