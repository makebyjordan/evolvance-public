
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regla para la web p√∫blica: cualquiera puede leer, solo admins pueden escribir.
    match /webContent/{document} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Regla para el resto de colecciones: solo usuarios autenticados pueden leer y escribir.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
