
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to web content, but only authenticated writes
    match /webContent/{section} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow anyone to submit LandAd responses
    match /landAdResponses/{responseId} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }

    // Default-deny all other collections unless explicitly allowed
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
