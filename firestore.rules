rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow public read access to web content, but only authed users can write
    match /webContent/{documentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Allow authenticated users to read/write to all other collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
