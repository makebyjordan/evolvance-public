
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to proposal files
    match /proposals/{allPaths=**} {
      allow read;
    }
    
    // Allow public read access to service images
     match /services/{allPaths=**} {
      allow read;
    }

    // Allow authenticated users to write to their own folder
    match /users/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
     // Allow authenticated users to write to invoices folders
    match /invoices-in/{allPaths=**} {
      allow write: if request.auth != null;
      allow read; 
    }
    match /invoices-out/{allPaths=**} {
       allow write: if request.auth != null;
       allow read;
    }
  }
}
